@font-face {
  font-family: "MaterialDesignIcons";
  src: url("./font/materialdesignicons-webfont-1d7bcee1b302339c3b8db10214dc9ec6.woff2")
    format("woff2");
  font-weight: thin;
  font-style: normal;
  font-display: swap;
}

:root {
  --accent: #ff5522;
  --accent-light: #fff;
  --border: #dddddd;
  --border-strong: #e0a58b;
  --text-main: #444444;
  --text-muted: #666666;
  --header-bg: #333333;
  --page-bg: #efefef;
  --font-main: "Ubuntu", "Open Sans", Roboto, Arial, sans-serif;
  --label-default: #b3302d; /* rouge */
  --label-active: #004a90; /* bleu ENT */
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body.auth-body {
  margin: 0;
  font-family: var(--font-main);
  color: var(--text-main);
  background: var(--page-bg);
}

/* HEADER */

.uc-header {
  color: #ffffff;
}

.uc-header-top {
  background: var(--header-bg);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  max-width: 1120px;
  margin: 0;
  padding: 0.7rem 0 0.1rem 0.7rem;
}

.uc-header-bottom {
  background: var(--accent-light);
}

.uc-logo-text {
  display: flex;
  flex-direction: row;
  font-size: 0.8em;
  font-weight: 500;
  line-height: 1.3;
  text-transform: uppercase;
}

.uc-logo-line1 {
  text-transform: uppercase;
  font-weight: 500;
}

.uc-logo-line2 {
  text-transform: uppercase;
}

.uc-nav {
  display: flex;
  flex-wrap: nowrap;
  white-space: nowrap;
  padding-left: 1.5rem;
  gap: 1rem;
  font-size: 0.8rem;
}

.uc-nav a {
  color: #ffffff;
  text-decoration: none;
}

.uc-nav a:hover {
  text-decoration: underline;
}

/* MAIN */

.auth-main {
  max-width: 1120px;
  margin: 1rem auto 2.5rem;
  padding: 0 1.5rem 0.5rem;
  font-family: "Ubuntu", sans-serif;
}

.auth-title {
  margin: 0 0 1.5rem;
  font-weight: 500;
  color: var(--accent);
  font-size: 2.5em;
}

.auth-subtitle {
  font-size: 0.5em;
  font-weight: lighter;
  color: var(--accent);
}

/* PANEL */

.auth-panel {
  border: 1px solid var(--border);
  display: flex;
  flex-direction: column;
  gap: 1rem;
  padding: 0;
}

.auth-panel-block {
  border-top: 1px solid var(--border);
  padding: 1.2rem 1.4rem;
  background: #ffffff;
  box-shadow: 0px 2px 1px -1px rgba(0, 0, 0, 0.2),
    0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 1px 3px 0px rgba(0, 0, 0, 0.12);
}

.auth-panel-block--top {
  border-top: none;
  background: var(--accent-light);
}

.auth-panel-title {
  margin: 0 0 0.9rem;
  font-size: 1rem;
  color: var(--accent);
  font-weight: lighter;
}

/* FORM */

/* =========  Floating fields  ========= */

.field {
  position: relative;
  margin-bottom: 1.2rem;
}

.field-input {
  width: 100%;
  border: 1px solid #b3302d; /* rouge de l’ENT */
  border-radius: 4px;
  padding: 1.2rem 0.75rem 1.2rem;
  font-size: 0.95rem;
  font-family: var(--font-main);
  background: #ffffff;
  color: var(--text-main);
}

.field-input:focus {
  outline: none;
  box-shadow: 0 0 0 1px rgba(179, 48, 45, 0.25);
}

.field-label {
  position: absolute;
  left: 0.75rem;
  top: 50%;
  transform: translateY(-50%);
  font-size: 0.95rem;
  color: var(--label-default);
  pointer-events: none;
  background: #ffffff;
  padding: 0 0.25rem;
  transition: 0.15s ease;
}

/* focus + champ rempli : label en haut et bleu */
.field-input:focus + .field-label,
.field-input:not(:placeholder-shown) + .field-label {
  top: -0.55rem;
  transform: translateY(0);
  font-size: 0.75rem;
  color: var(--label-active);
}

/* =========  Variante avec icône œil  ========= */

.field--with-eye .field-input {
  padding-right: 3rem; /* place pour le bouton à droite */
}

.field-eye {
  position: absolute;
  top: 0;
  right: 0;
  width: 2.6rem;
  height: 100%;
  border: 2px solid #f17b40;
  border-radius: 0 4px 4px 0;
  border-left: 3px solid #f17b40;
  background: #f9f3ef;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background: #f4f4f4;
  color: var(--accent);
  z-index: 100;
  font-size: 10pt;
  font-weight: 600;
  text-transform: uppercase;
}

.field-eye svg {
  fill: var(--accent);
  scale: 0.85;
}

.field-eye:hover {
  background: #f5e5dc;
}

/* BUTTONS */

.auth-button {
  margin-top: 0rem;
  padding: 6px 10px 6px 10px;
  border-radius: 2px;
  border: 2px solid var(--accent);
  background: #f4f4f4;
  color: var(--accent);
  font-size: 10pt;
  font-weight: 300;
  cursor: pointer;
  text-transform: uppercase;
}

.auth-button:hover {
  background: var(--accent);
  color: #ffffff;
}

.auth-secondary-button {
  margin-top: 0rem;
  padding: 6px 10px 6px 10px;
  border-radius: 2px;
  border: 2px solid var(--accent);
  background: #f4f4f4;
  color: var(--accent);
  font-size: 10pt;
  font-weight: 300;
  cursor: pointer;
  text-transform: uppercase;
}

.auth-secondary-button:hover {
  background: var(--accent);
  color: #ffffff;
}

/* LINKS + TEXT */

.auth-links {
  font-size: 0.9rem;
  margin-top: 2rem;
  align-items: center;
  display: inline-block;
}

.auth-links a {
  color: #004e82;
  text-decoration: underline;
  justify-content: center;
  align-items: center;
}

.auth-links svg {
  width: 1.3rem;
  justify-content: center;
  align-items: center;
}

.auth-links a:hover {
  text-decoration: underline;
}

.auth-security-note {
  margin-top: 1.2rem;
  line-height: 1.15;
  font-size: 1em;
  color: var(--text-muted);
}

/* FOOTER */

.auth-footer {
  border-top: 1px solid #e2e2e2;
  padding: 0.8rem 1.5rem;
  font-size: 0.8rem;
  text-align: center;
  color: #999999;
}

/* RESPONSIVE */

@media (max-width: 720px) {
  .uc-header-inner {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.6rem;
  }

  .auth-main {
    margin-top: 1.2rem;
  }

  .auth-panel {
    border-left: none;
    border-right: none;
  }
}

/* === Fenêtre modale de sensibilisation cyber === */

.cyber-backdrop[hidden],
.cyber-modal[hidden] {
  display: none !important;
}

.cyber-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
}

.cyber-modal {
  position: fixed;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.cyber-modal-inner {
  max-width: 520px;
  width: 90%;
  background: #ffffff;
  border-radius: 8px;
  padding: 1.4rem 1.6rem;
  box-shadow: 0 18px 45px rgba(0, 0, 0, 0.25);
  font-size: 0.95rem;
}

.cyber-modal-inner h2 {
  margin-top: 0;
  margin-bottom: 0.8rem;
  font-size: 1.3rem;
  color: var(--accent);
}

.cyber-modal-inner h3 {
  margin-top: 1.1rem;
  margin-bottom: 0.5rem;
  font-size: 1.02rem;
  color: var(--text-main);
}

.cyber-modal-inner p {
  margin: 0 0 0.7rem;
  color: var(--text-main);
}

.cyber-links {
  margin: 0 0 1rem;
  padding-left: 1.1rem;
}

.cyber-links li {
  margin-bottom: 0.35rem;
}

.cyber-link {
  color: #004e82;
  text-decoration: underline;
}

.cyber-link:hover {
  text-decoration: underline;
  filter: brightness(1.05);
}

.cyber-modal-close {
  padding: 0.45rem 1.1rem;
  border-radius: 999px;
  border: none;
  background: var(--accent);
  color: #ffffff;
  font-size: 0.9rem;
  font-weight: 500;
  cursor: pointer;
}

.cyber-modal-close:hover {
  filter: brightness(1.05);
}
